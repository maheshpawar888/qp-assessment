{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./types/*",
    "./node_modules/@types",
  ],
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "files": ["src/types/express.d.ts"]
}
